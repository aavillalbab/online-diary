{% macro newsImage(news, class = 'img-fluid rounded', style = '') %}
    <img src="{{ fileUrl(news.filePathAndKey, { signed: false }) }}"
         class="{{ class }}"
         alt="{{ news.title }}"
         style="{{ style }}"
         onerror="this.onerror=null; this.src='{{ asset('images/no-image.jpg') }}';">
{% endmacro %}