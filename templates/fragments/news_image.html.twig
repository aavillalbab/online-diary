{% macro newsImage(news, class = 'img-fluid rounded', style = '') %}
    {% if cuasi.filePathAndKey is not empty %}
        <a href="{{ fileUrl(news.filePathAndKey, {signed: false}) }}" target="_blank">
            <img src="{{ fileUrl(news.filePathAndKey, {signed: false}) }}" width="15%" class="img-thumbnail" alt="">
        </a>
    {% else %}
        <p style="color: #A8A5A5">Sin Imagen.</p>
    {% endif %}
{% endmacro %} 