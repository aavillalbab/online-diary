{% extends 'base.html.twig' %}

{% block title %}Categorías - Diario Online{% endblock %}

{% block body %}
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-4">Categorías</h1>
        </div>
    </div>

    <div class="row">
        {% for category in categories %}
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">{{ category.name }}</h5>
                        <p class="card-text">{{ category.description|default('') }}</p>
                        <a href="{{ path('category_show', {'slug': category.slug}) }}" class="btn btn-primary">
                            Ver noticias
                            <span class="badge bg-light text-dark ms-2">{{ category.news|length }}</span>
                        </a>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <div class="alert alert-info">
                    No hay categorías disponibles en este momento.
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %} 